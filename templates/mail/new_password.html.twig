{% extends 'base.html.twig' %}
 
{% block title %}Nouveau mot de passe{% endblock %}
 
{% block body %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form) }}

    {{ form_row(form.password.first, {'label': 'Mot de passe', 'attr': {'placeholder': "Mot de passe"}} ) }}
    {{ form_row(form.password.second, {'label': 'Répéter le mot de passe', 'attr': {'placeholder': "Répéter le mot de passe"}} ) }}

    {{ form_end(form) }}

{% endblock %}