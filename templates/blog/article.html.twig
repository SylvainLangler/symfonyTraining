{% extends 'base.html.twig' %}

{% block body %}

    <article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }} dans la catégorie {{ article.category.title }}</div>
        <div class="content">
            <img src="{{ article.image }}" alt="">
            <p>{{ article.content | raw }}</p>
        </div>
    </article>

    <section id="commentaires">
        <h2>Commentaires</h2>
        {% for comment in article.comments %}
        <div class="comment">
            <div class="row">
                <div class="col-3">
                    <div>{{ comment.author }}</div>
                    <div>{{ comment.createdAt | date('d/m/Y à H:i') }}</div>
                </div>
                <div class="col-9">
                    <div>
                        {{ comment.content | raw }}
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </section>

    <section id="products" class="mt-5">
        <h2>Produits</h2>
        {% for product in article.products %}
        <div class="product">
            <div class="row">
                <div class="col-6">
                {{ product.name }}
                </div>
                <div class="col-6">
                {{ product.price }}
                </div>
            </div>
        </div>
        {% endfor %}
    </section>

{% endblock %}